{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Mash Place API",
    "description": "Provides RESTful API access to geographic resources in JSON/GeoJSON representation"
  },
  "host": "mash-place-api.herokuapp.com",
  "basePath": "/v1",
  "schemes": ["https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/boundaries/counties": {
      "get": {
        "responses": {
          "200": {
            "description": "List of all counties",
            "schema": {
              "title": "counties",
              "type": "array",
              "items": {
                "$ref": "#/definitions/County"
              }
            }
          },
          "405": {
            "$ref": "#/responses/405"
          },
          "406": {
            "$ref": "#/responses/406"
          },
          "429": {
            "$ref": "#/responses/429"
          }
        }
      }
    },
    "/boundaries/counties/{county_id}": {
      "get": {
        "parameters": [
          {
            "name": "county_id",
            "in": "path",
            "type": "string",
            "description": "ID of a county",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "County has been retrieved",
            "schema": {
              "$ref": "#/definitions/County"
            }
          },
          "404": {
            "description": "County not found"
          },
          "405": {
            "$ref": "#/responses/405"
          },
          "406": {
            "$ref": "#/responses/406"
          },
          "429": {
            "$ref": "#/responses/429"
          }
        }
      }
    }
  },
  "responses": {
    "405": {
      "description": "Method not allowed"
    },
    "406": {
      "description": "Not acceptable"
    },
    "429": {
      "description": "Too many requests"
    }
  },
  "definitions": {
    "County": {
      "type": "object",
      "properties": {
        "first_name": {"type": "string"},
        "last_name": {"type": "string"},
        "email_address": {
          "type": "string",
          "format": "email"
        },
        "password": {"type": "string"},
        "roles": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"},
          "uniqueItems": true
        },
        "activated_at": {"type": ["string", "null"]},
        "login_at": {"type": ["string", "null"]},
        "updated_at": {"type": ["string", "null"]},
        "archived_at": {"type": ["string", "null"]}
      },
      "required": ["first_name", "last_name", "email_address", "password", "roles"]
    }
  }
}
